<view class="column-wrapper">
    <view class="content-wrapper column-wrapper">
        <view>Using Icon</view>
        <view class="row-wrapper">
            <block wx:for="{{iconlist}}">
                <icon type="{{item.type}}" size="{{item.size}}" color="{{item.color}}"></icon>
            </block>
        </view>
    </view>

    <view class="content-wrapper column-wrapper">
        <text>Using Text</text>
        <text selectable>The quick brown fox jumps over a lazy dog !\nit is not good at all</text>
    </view>

    <view class="content-wrapper column-wrapper">
        <text>Using Progress</text>
        <progress percent="87" show-info stroke-width="12" activeColor="#c62828" backgroundColor="#039BE5">
        </progress>

        <progress active percent="{{progress}}" show-info stroke-width="16" activeColor="#d50000" backgroundColor="#FFCA28">
        </progress>
        <button bindtap="up">Make Progress</button>
    </view>
</view>