<view style="width:{{wrapperWidth}}px;height:{{wrapperHeight}}px;" bindtouchstart="onToucStart" bindtouchend="onTouchEnd"
    bindtouchmove="onMove" class="wrapper">
    <image class="bkg" style="transform-origin:{{transformX}}px {{transformY}}px;transform:translate({{xPos}}px,{{yPos}}px) scale({{currentRatio}},{{currentRatio}});top:{{topOffset}}px;left:{{leftOffset}}px;width:{{picWidth}}px;height:{{picHeight}}px;" src="/res/img/jingyuetan.jpg"></image>
    <canvas class="layer" style="transform-origin:{{transformX}}px {{transformY}}px;transform:translate({{xPos}}px,{{yPos}}px) scale({{currentRatio}},{{currentRatio}});top:{{topOffset}}px;left:{{leftOffset}}px;width:{{originWidth}}px;height:{{originHeight}}px;" canvas-id="mapLayer"></canvas>
</view>