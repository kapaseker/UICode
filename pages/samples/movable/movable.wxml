<view class="column-wrapper">
    <!-- 记住，一定要给予direction -->
    <view class="section__title">movable-view区域小于movable-area</view>
    <movable-area style="height: 200px;width: 200px;background: red;">
        <movable-view inertia direction="all" style="height: 50px; width: 50px;" x="{{x}}" y="{{y}}">
            <image style="height:100%;width:100%" src="http://img02.tooopen.com/images/20150928/tooopen_sy_143912755726.jpg"></image>
        </movable-view>
    </movable-area>
    <view class="btn-area">
        <button size="mini" bindtap="moveTo">click me to move to (30px, 30px)</button>
    </view>
    <view class="section__title">movable-view区域大于movable-area</view>
    <movable-area style="height: 100px;width: 100px;background: red;">
        <movable-view direction="all" style="height: 200px; width: 200px; background: blue;">
        </movable-view>
    </movable-area>
</view>